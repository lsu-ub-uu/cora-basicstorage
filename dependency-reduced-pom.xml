<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>cora-parent</artifactId>
    <groupId>se.uu.ub.cora</groupId>
    <version>0.5-SNAPSHOT</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>basicstorage</artifactId>
  <name>Basic storage</name>
  <version>0.5-SNAPSHOT</version>
  <scm>
    <connection>scm:git:https://git.epc.ub.uu.se/epc/storage.git</connection>
    <developerConnection>scm:git:https://git.epc.ub.uu.se/epc/storage.git</developerConnection>
    <url>https://git.epc.ub.uu.se/epc/storage.git</url>
  </scm>
  <build>
    <resources>
      <resource>
        <targetPath>storagefiles</targetPath>
        <filtering>true</filtering>
        <directory>files</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>org.glassfish*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <releases />
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>epc-release</id>
      <name>EPC Nexus Release Repository</name>
      <url>http://epc.ub.uu.se/nexus/content/groups/public</url>
    </repository>
    <repository>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <updatePolicy>daily</updatePolicy>
      </snapshots>
      <id>epc-snapshot</id>
      <name>EPC Nexus Snapshot Repository</name>
      <url>http://epc.ub.uu.se/nexus/content/groups/public-snapshots</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>6.8.8</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>bsh</artifactId>
          <groupId>org.beanshell</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jcommander</artifactId>
          <groupId>com.beust</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <spider.version>0.14-SNAPSHOT</spider.version>
    <userpicker.version>0.2-SNAPSHOT</userpicker.version>
    <json.version>0.3-SNAPSHOT</json.version>
    <apptokenstorage.version>0.3-SNAPSHOT</apptokenstorage.version>
    <bookkeeper.version>0.10-SNAPSHOT</bookkeeper.version>
  </properties>
</project>

